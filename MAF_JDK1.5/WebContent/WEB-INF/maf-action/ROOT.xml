<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE maf-command PUBLIC
         "-//Miranet//DTD maf-command config XML V1.0//EN"
         "mvc-configuration.dtd">
<configuration>
	<template-list>
		<template-info name="xadmin_inner" uri="/xadmin/_layout/inner.jsp"/>
		<template-info name="excel" uri="/WEB-INF/layout/excel.jsp" />
		<template-info name="excel_xml" uri="/WEB-INF/layout/excel_xml.jsp" />
		<template-info name="xml" uri="/WEB-INF/layout/xml.jsp" />
		<template-info name="print" uri="/WEB-INF/layout/print.jsp" />
		<template-info name="popup" uri="/WEB-INF/layout/popup.jsp" />	
		<template-info name="popup_notitle" uri="/WEB-INF/layout/popup_notitle.jsp" />	

		<template-info name="www" uri="/WEB-INF/layout/layout_table.jsp" desc="일반 서브페이지"/>			
		<template-info name="wlc_tutor" uri="/WEB-INF/layout/wlc_tutor.jsp" desc="강의실-강사용"/>	
		<template-info name="wlc_learner" uri="/WEB-INF/layout/wlc_learner.jsp" desc="강의실-학습자용"/>	
		<template-info name="inner_frame" uri="/WEB-INF/layout/_inner_frame.jsp" />
		
		<template-info name="etc" uri="/WEB-INF/layout/layout_etc.jsp" />
		<template-info name="login"  uri="/WEB-INF/jsp/member/_login.jsp" useSiteTemplate="true">

		</template-info>
	</template-list>

	<global-view>
		<view-info name="message" uri="/WEB-INF/layout/message.jsp" />
		<view-info name="error" uri="/WEB-INF/layout/message_error.jsp" />
		<view-info name="errorwin" uri="/WEB-INF/layout/message_error_win.jsp" />
		<view-info name="redirect" uri="/WEB-INF/layout/redirect.jsp" />
		<view-info name="blank" uri="/etc/blank.html"/>
		<view-info name="dummy" type="dummy"/>
		<view-info name="xml" type="xml"/>
		<view-info name="json" type="json"/>
		<view-info name="excel_import_error" uri="/WEB-INF/jsp/error/excel_import_error.jsp" />
		
	</global-view>
	
	<action uri="/common.do" type="modules.common.actions.CommonAction" title="common" desc="common">
		<action-view>
			<view-info name="langList" uri="/WEB-INF/jsp/common/langSelect/langlistJson.jsp" />
			<view-info name="getOrg" uri="/WEB-INF/jsp/common/orgSelector/getOrgJson_kia.jsp" />
			<view-info name="getTargetOrg" uri="/WEB-INF/jsp/common/orgSelector/getTargetOrgJson.jsp" />
			<view-info name="setOrg" uri="/WEB-INF/jsp/common/orgSelector/setOrgJson.jsp" />
			<view-info name="getSubjectInfo" uri="/WEB-INF/jsp/wlc/subjectinfo.jsp" useTemplate="popup"/>
		</action-view>
		<cmds>
			<cmd name="langList" method="langList"  cmdtype="jsp" desc="다국어 목록 가져오기(json)"/>
			<cmd name="getOrg" method="getOrg"  cmdtype="jsp" desc="조직 목록 가져오기"/>
			<cmd name="setOrg" method="setOrg"  cmdtype="jsp" desc="조직 목록 셋업"/>
			<cmd name="getSubjectInfo" method="getSubjectInfo"  cmdtype="jsp" desc="조직 목록 셋업"/>
			<cmd name="getTargetOrg" method="getTargetOrg"  cmdtype="jsp" desc="Target 조직 목록 가져오기"/>
			
		</cmds>
	</action>
	
	<action uri="/default.do" type="modules.common.actions.Default" title="메인페이지" desc="default 페이지">
		<action-view>
			<view-info name="default" uri="/web_src/smis/index.jsp"/>
		</action-view>
	</action>
	
	<action uri="/login.do" type="modules.common.login.LoginAction"  title="LOGIN" default="loginForm" desc="login form">
		<action-view>
			<view-info name="loginok" uri="/WEB-INF/jsp/member/login_ok.jsp"  />
			<view-info name="removesess" uri="/WEB-INF/jsp/member/removeSession.jsp" useTemplate="etc" />
			<view-info name="loginForm" uri="/WEB-INF/jsp/member/login_form_hmc.jsp" useTemplate="login"/>
			<view-info name="loginForm_hmc" uri="/WEB-INF/jsp/member/login_form_hmc.jsp" useTemplate="login"/>
			<view-info name="loginForm_kmc" uri="/WEB-INF/jsp/member/login_form_kmc.jsp" useTemplate="login"/>
		</action-view>
				<cmds>
					<cmd name="loginForm" method="cmdForm" />
					<cmd name="login" method="cmdLogin" />
					<cmd name="removesess" method="cmdRemoveSession" desc="기존세션제거"/>
				</cmds>
	</action>
	<action uri="/rlogin.do" type="modules.common.login.RLoginAction"  title="LOGIN" default="login" desc="login form">
		<action-view>
			<view-info name="loginok" uri="/WEB-INF/jsp/member/login_ok.jsp"  />
			<view-info name="removesess" uri="/WEB-INF/jsp/member/removeSession.jsp" useTemplate="etc" />
			<view-info name="loginForm" uri="/WEB-INF/jsp/member/login_form_hmc.jsp" useTemplate="login"/>
		</action-view>
				<cmds>
					<cmd name="login" method="cmdLogin" />
				</cmds>
	</action>
	<action uri="/logout.do" type="modules.common.login.LogoutAction"  title="LOGOUT Act" desc="login act" >
		<action-view>
			<view-info name="logoutok" uri="/WEB-INF/jsp/member/logout_ok.jsp"  />
		</action-view>
	</action>
	
	<action uri="/status.do" type="maf.web.mvc.Status"  title="Status" desc="시스템 상태보기">
		<action-view>
			<view-info name="status" uri="/WEB-INF/jsp/mafapp/status/status.jsp" />
		</action-view>
	</action>
	
	<action uri="/menu.do" type="modules.common.MenuAction"  title="메뉴 JSON 생성" desc="메뉴 JSON 생성">
		
	</action>
	<action uri="/notice.do" type="modules.hkmca.notice.NoticeAction" title="공지사항" jsppath="/WEB-INF/jsp/hkmca/notice/" default="list" debug="true">
		<action-view>
			<view-info name="list" uri="list.jsp" useTemplate="www" />
			<view-info name="view" uri="view.jsp" useTemplate="www" />
			<view-info name="edit" uri="edit.jsp" useTemplate="www" />
			<view-info name="add" uri="edit.jsp" useTemplate="www" />
		</action-view>
		<cmds>
			<cmd name="list" method="cmdList" formname="frm1" authtype="R" />
			<cmd name="view" method="cmdView" formname="frm1" authtype="R" />
			<cmd name="edit" method="cmdEdit" formname="frm1" authtype="U" />
			<cmd name="update" method="cmdUpdate" formname="frm1" from="edit" authtype="U" />
			<cmd name="insert" method="cmdInsert" formname="frm1" from="update" authtype="C" />
			<cmd name="add" method="cmdAdd" formname="frm1" from="update" authtype="C" />
			<cmd name="delete" method="cmdDelete" formname="frm1" from="delete" authtype="D" />
		</cmds>
		<forms>
			<form name="frm1" bundle="table.etc_notice">
					<input name="id" message="id" type="text" required="true"/>
					<input name="title" message="title" type="text" required="true"/>
					<input name="contetnts" message="contetnts" type="text" />
					<input name="category" message="category" type="text" />
					<input name="owner" message="owner" type="text" />
					<input name="update_dt" message="update_dt" type="text" />
					<input name="update_id" message="update_id" type="text" />
					<input name="view_cnt" message="view_cnt" type="text" required="true"/>
					<input name="view_all" message="view_all" type="text" />
					<input name="view_de" message="view_de" type="text" />
					<input name="always_top" message="always_top" type="text" />
					<input name="popup_yn" message="popup_yn" type="text" />
					<input name="attachment" message="attachment" bundle="table.bas_subject_cd" type="text" />
					
			</form>		
		</forms>
		
	</action>
</configuration>
