<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE digester-rules PUBLIC
         "-//Jakarta Apache //DTD digester-rules XML V1.0//EN"
         "digester-rules.dtd">
<digester-rules>
	<object-create-rule pattern="bundle" classname="maf.context.i18n.MafResourceBundle" />
	<set-properties-rule pattern="bundle">
		<alias attr-name="defaultLocale" prop-name="defaultLocale" />
		<alias attr-name="imagePath" prop-name="imagePath" />
		<alias attr-name="desc" prop-name="desc" />
	</set-properties-rule>
	<pattern value="bundle/resource">
		<object-create-rule classname="maf.context.i18n.MafResource" />
		<call-method-rule methodname="setValue" paramcount="1" paramtypes="java.lang.String" />
		<call-param-rule paramnumber="0" />
		<set-properties-rule>
			<alias attr-name="key" prop-name="key" />
			<alias attr-name="type" prop-name="type" />
			<alias attr-name="value" prop-name="value" />
			<alias attr-name="desc" prop-name="desc" />
			<alias attr-name="filename" prop-name="filename" />
			<alias attr-name="icon" prop-name="icon" />
		</set-properties-rule>
		<pattern value="message">
			<object-create-rule classname="maf.context.i18n.MafResourceLocale" />
			<call-method-rule methodname="setValue" paramcount="1" paramtypes="java.lang.String" />
			<call-param-rule paramnumber="0" />
			<set-properties-rule>
				<alias attr-name="locale" prop-name="locale" />
				<alias attr-name="value" prop-name="value" />
				<alias attr-name="type" prop-name="type" />
				<alias attr-name="filename" prop-name="filename" />
				<alias attr-name="icon" prop-name="icon" />
				<alias attr-name="desc" prop-name="desc" />
			</set-properties-rule>
			<set-next-rule methodname="addResourceLocale" />
		</pattern>
		<set-next-rule methodname="addMafResource" />
	</pattern>
</digester-rules>
