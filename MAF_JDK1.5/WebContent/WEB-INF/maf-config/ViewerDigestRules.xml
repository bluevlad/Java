<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE digester-rules PUBLIC
         "-//Jakarta Apache //DTD digester-rules XML V1.0//EN"
         "digester-rules.dtd">

<digester-rules>
	<object-create-rule pattern="viewer" classname="maf.web.mvc.view.support.ViewerInfoBean" />
	<set-properties-rule pattern="viewer">
		<alias attr-name="filename" prop-name="filename" />
		<alias attr-name="title" prop-name="title" />
	</set-properties-rule>
	<pattern value="viewer/field">
		<object-create-rule classname="maf.web.mvc.view.support.ViewerFieldBean" />
		<set-properties-rule>
			<alias attr-name="id" prop-name="id" />
			<alias attr-name="title" prop-name="title" />
			<alias attr-name="format" prop-name="format" />
			<alias attr-name="align" prop-name="align" />
			<alias attr-name="style" prop-name="style" />
		</set-properties-rule>
		<set-next-rule methodname="addField" />
	</pattern>
</digester-rules>
