<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE maf-command PUBLIC
         "-//UBQ//DTD maf-command config XML V1.0//EN"
         "mvc-configuration.dtd">
<configuration>
	<global-view></global-view>
    
	<action uri="MemberMng.do" type="modules.xadmin.member.MemberAction" desc="사용자관리" title="사용자관리"
	    jsppath="/WEB-INF/jsp/xadmin/member/member/" default="list">
	        <action-view>
	            <view-info name="list" uri="list.jsp" useTemplate="www" />
	            <view-info name="add" uri="edit.jsp" useTemplate="www" />
	            <view-info name="edit" uri="edit.jsp" useTemplate="www" />
	        </action-view>
	        <cmds>
	            <cmd name="list" method="cmdList" formname="frm1" authtype="R" />
	            <cmd name="add" method="cmdAdd" formname="frm1" authtype="C" />
	            <cmd name="edit" method="cmdEdit" formname="frm1" authtype="C" />
	            <cmd name="insert" method="cmdInsert" />
	            <cmd name="update" method="cmdUpdate" />
	            <cmd name="delete" method="cmdDelete" />
	        </cmds>
	        <forms>
	            <form name="frm1" bundle="table.maf_user">
		            <input name="usn" message="usn" type="text" required="true"/>
		            <input name="userid" message="userid" type="text" />
		            <input name="passwd" message="passwd" type="text" />
		            <input name="nm" message="nm" type="text" />
		            <input name="nick_nm" message="nick_nm" type="text" />
		            <input name="nm_eng" message="nm_eng" type="text" />
		            <input name="active_yn" message="active_yn" type="text" required="true"/>
		            <input name="pin" message="pin" type="text" />
		            <input name="pos_nm" message="pos_nm" type="text" />
		            <input name="hp" message="hp" type="text" />
		            <input name="tel" message="tel" type="text" />
		            <input name="fax" message="fax" type="text" />
		            <input name="email" message="email" type="text" />
		            <input name="add" message="add" type="text" />
		            <input name="remarks" message="remarks" type="text" />
		            <input name="org_cd" message="org_cd" type="text" />
	                <input name="reg_dt" message="reg_dt" type="text" bundle="common"></input>
	                <input name="active_yn" message="active_yn" type="text" bundle="common"></input>
	            </form>     
	        </forms>
	</action>
    
    <action uri="org.do" type="modules.xadmin.member.OrgAction" desc="Organization" title="Organization"
     jsppath="/WEB-INF/jsp/xadmin/member/org/" default="list">
        <action-view>
            <view-info name="list" uri="list.jsp" useTemplate="www" />
            <view-info name="tree" uri="tree.jsp" useTemplate="inner_frame" />
            <view-info name="edit" uri="edit.jsp" useTemplate="inner_frame" />
            <view-info name="add" uri="edit.jsp" useTemplate="inner_frame" />
        </action-view>
        <cmds>
            <cmd name="list" method="cmdList" authtype="R" />
            <cmd name="tree" method="cmdTree" authtype="R" />
            <cmd name="add" method="cmdAdd" authtype="C" />
            <cmd name="edit" method="cmdEdit" authtype="U" />
            <cmd name="update" method="cmdUpdate" authtype="U" />
            <cmd name="insert" method="cmdInsert" authtype="C" />
            <cmd name="delete" method="cmdDelete" authtype="D" />
        </cmds>
    </action>
    
	<action uri="AuthAdmin.do" type="modules.xadmin.member.AuthAction" desc="사용자권한관리" title="사용자권한관리"
	 jsppath="/WEB-INF/jsp/xadmin/member/role/" default="list" debug="true">
		<action-view>
			<view-info name="list" uri="list.jsp" useTemplate="www" />
			<view-info name="edit" uri="edit.jsp" useTemplate="www" />
            <view-info name="add" uri="edit.jsp" useTemplate="www" />
		</action-view>
		<cmds>
			<cmd name="list" method="cmdList" formname="frm1" authtype="R" />
			<cmd name="edit" method="cmdEdit" formname="frm1" authtype="C" />
            <cmd name="add" method="cmdAdd" formname="frm1" authtype="C" />
			<cmd name="update" method="cmdUpdate" />
			<cmd name="insert" method="cmdInsert" />
			<cmd name="delete" method="cmdDelete" />
		</cmds>
        <forms>
            <form name="frm1" bundle="table.maf_user">
                <input name="role_id" message="role_id" type="text"/>
                <input name="role_name" message="role_name" type="text" />
                <input name="is_super" message="is_super" type="text" />
                <input name="is_nologin" message="is_nologin" type="text" />
                <input name="bbs_level" message="bbs_level" type="text" />
                <input name="fixed" message="fixed" type="text" />
                <input name="userid" message="userid" type="text" />
                <input name="usernm" message="nm" type="text" />
                <input name="site" message="site" type="text" />
            </form>     
        </forms>
	</action>

</configuration>