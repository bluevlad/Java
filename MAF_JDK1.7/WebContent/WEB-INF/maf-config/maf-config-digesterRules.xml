<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE digester-rules PUBLIC
         "-//Jakarta Apache //DTD digester-rules XML V1.0//EN"
         "digester-rules.dtd">
<digester-rules>
	<object-create-rule pattern="maf-app" classname="maf.web.context.MafConfigBean" />
	<pattern value="maf-app/pathConfig/contextPath">
		<call-method-rule methodname="setContextPath" paramcount="1" paramtypes="java.lang.String" />
		<call-param-rule paramnumber="0" />
	</pattern>
	<pattern value="maf-app/pathConfig/contextImagePath">
		<call-method-rule methodname="setContextImagePath" paramcount="1" paramtypes="java.lang.String" />
		<call-param-rule paramnumber="0" />
	</pattern>
	<pattern value="maf-app/pathConfig/siteTemplate">
		<set-properties-rule>
			<alias attr-name="src" prop-name="siteTemplate_src" />
			<alias attr-name="path" prop-name="siteTemplate_path" />
		</set-properties-rule>
	</pattern>
	<pattern value="maf-app/resolver/locale_resolver">
		<call-method-rule methodname="setLocale_resolver" paramcount="1" paramtypes="java.lang.String" />
		<call-param-rule paramnumber="0" />
	</pattern>
	<pattern value="maf-app/resolver/site_resolver">
		<call-method-rule methodname="setSite_resolver" paramcount="1" paramtypes="java.lang.String" />
		<call-param-rule paramnumber="0" />
	</pattern>
	<set-properties-rule pattern="maf-app/resource/dbms">
		<alias attr-name="name" prop-name="dbms_name" />
		<alias attr-name="type" prop-name="dbms_type" />
	</set-properties-rule>	
	<set-properties-rule pattern="maf-app/resource/smtp">
		<alias attr-name="host" prop-name="smtp_host" />
		<alias attr-name="userid" prop-name="smtp_userid" />
		<alias attr-name="password" prop-name="smtp_password" />
	</set-properties-rule>	
</digester-rules>
