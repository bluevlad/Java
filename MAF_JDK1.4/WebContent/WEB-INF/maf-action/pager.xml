<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE maf-command PUBLIC
         "-//Miranet//DTD maf-command config XML V1.0//EN"
         "mvc-configuration.dtd">
<configuration>
	<template-list>
		<template-info name="inner" uri="/WEB-INF/jsp/mafapp/pager/_layout.jsp" />
	</template-list>


	
	<action uri="default.do" type="miraenet.app.pager.PagerAction" desc="쪽지" title="쪽지" default="listRcv">
		<action-view>
			<view-info name="listRcv" uri="/WEB-INF/jsp/mafapp/pager/listRcv.jsp" useTemplate="inner" />
			<view-info name="listSnd" uri="/WEB-INF/jsp/mafapp/pager/listSnd.jsp" useTemplate="inner" />
			<view-info name="msgViewRcv" uri="/WEB-INF/jsp/mafapp/pager/msgViewRcv.jsp" useTemplate="inner" />
			<view-info name="msgViewSnd" uri="/WEB-INF/jsp/mafapp/pager/msgViewSnd.jsp" useTemplate="inner" />
			<view-info name="edit" uri="/WEB-INF/jsp/mafapp/pager/edit.jsp" useTemplate="inner" />
			<view-info name="msgWrite" uri="/WEB-INF/jsp/mafapp/pager/msgWrite.jsp" useTemplate="inner" />
			<view-info name="addressBook" uri="/WEB-INF/jsp/mafapp/pager/addressBook.jsp" useTemplate="inner" />
		</action-view>
		<cmds>
			<cmd name="listRcv" method="cmdListRcv" formname="frm1" authtype="R" />
			<cmd name="listSnd" method="cmdListSnd" formname="frm1" authtype="R" />
			<cmd name="deleteRcv" method="cmdDeleteRcv" formname="frm1" authtype="D" />
			<cmd name="deleteSnd" method="cmdDeleteSnd" formname="frm1" authtype="D" />
			<cmd name="msgViewSnd" method="cmdMsgViewSnd" formname="frm1" authtype="R" />
			<cmd name="msgViewRcv" method="cmdMsgViewRcv" formname="frm1" authtype="R" />
			<cmd name="edit" method="cmdEdit" formname="frm1" authtype="U" />
			<cmd name="update" method="cmdUpdate" formname="frm1" from="edit" authtype="U" />
			<cmd name="sendMsg" method="cmdSendMsg" formname="frm1" from="update" authtype="C" />
			<cmd name="msgWrite" method="cmdMsgWrite" formname="frm1" from="update" authtype="C" />
			<cmd name="grpMsgWrite" method="cmdGrpMsgWrite" formname="frm1" from="update" authtype="C" />
			<cmd name="addressBook" method="cmdAddressBook" formname="frm2"  />
			
		</cmds>
		<forms>
			<form name="frm1" bundle="mafpager">
					<input name="msg_no" message="form.msg_no" type="text" >
						<constraint validatorName="required"/>
					</input>
					<input name="msg_rcv_userid" message="form.msg_rcv_userid" type="text" >
						<constraint validatorName="required"/>
					</input>
					<input name="msg_rcv_nm" message="form.msg_rcv_nm" type="text" >
					</input>
					<input name="msg_snd_userid" message="form.msg_snd_userid" type="text" >
					</input>
					<input name="msg_snd_nm" message="form.msg_snd_nm" type="text" >
					</input>
					<input name="msg_title" message="form.msg_title" maxlength="100" type="text" >
						<constraint validatorName="required"/>
					</input>
					<input name="msg_info" message="form.msg_info" type="textarea" >
						<constraint validatorName="required"/>
					</input>
					<input name="file_name" message="form.file_name" type="file" >
					</input>
					<input name="msg_dt" message="form.msg_dt" type="text" >
					</input>
					<input name="msg_read_dt" message="form.msg_read_dt" type="text" >
					</input>
					<input name="msg_rcv_isdel" message="form.msg_rcv_isdel" type="text" >
					</input>
					<input name="msg_snd_isdel" message="form.msg_snd_isdel" type="text" >
					</input>
					<input name="update_dt" message="form.update_dt" type="text" >
					</input>
					<input name="update_id" message="form.update_id" type="text" >
					</input>
			</form>		
			<form name="frm2" bundle="mafpager">
				
					<input name="msg_grp_id" message="form.msg_grp_id" type="text" >
						<constraint validatorName="required"/>
					</input>
				
					<input name="msg_grp_nm" message="form.msg_grp_nm" type="text" >
						<constraint validatorName="required"/>
					</input>
				
					<input name="owner_usn" message="form.owner_usn" type="text" >
						<constraint validatorName="required"/>
					</input>
			</form>			
		</forms>
	</action>

</configuration>
