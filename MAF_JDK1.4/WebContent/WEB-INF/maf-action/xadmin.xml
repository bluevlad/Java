         "-//Miranet//DTD maf-action config XML V1.0//EN"
         "mvc-configuration.dtd">
<configuration>
	<template-list>
		<template-info name="default" uri="/xadmin/_layout/default.jsp"/>
		<template-info name="inner" uri="/xadmin/_layout/inner.jsp"/>
		<template-info name="inner_frame" uri="/xadmin/_layout/inner_frame.jsp"/>
		<template-info name="user_info" uri="/xadmin/popup/user_info_layout.jsp"/>
		
